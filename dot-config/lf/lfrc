# Bindings
map <c-b> $setbg $f
map <c-e> down
map <c-n> push :mkdir<space>
map <c-r> reload
map <c-y> up
map <enter> shell
map B $vidir
map C copyto
map D delete
map E extract
map I push A<c-a> # at the very beginning
map J fzf_jump
map M moveto
map N chmod
map O push :open-fork<space>
map Pa async_paste
map Pb backup_paste
map Pp :link
map R push A<a-b> # after extention
map S $samedir
map T !bat "$f"
map W $setsid -f $TERMINAL >/dev/null 2>&1
map Yb yank-basename
map Ybe yank-basename-without-extension
map Yd yank-dirname
map Yp yank-path
map Ys $printf "%s" "$fx" | xclip -selection clipboard
map e &em "$fx"
map gg top
map gs :fzf_search
map c push r<c-u> # new rename
map I push r<c-a> # at the very beginning
map i push r<a-b><a-b><a-f> # before extension
map a push r<a-b> # after extension
map o push :open-with<space>
