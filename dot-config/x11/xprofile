#!/bin/sh

xrdb "${XDG_CONFIG_HOME:-$HOME/.config}/x11/Xresources" &
xrdbpid=$!

locker(){
    LOCK_TIME=3 # Minutes
    NOTIFY=45 # Seconds
    xautolock \
        -time "$LOCK_TIME" \
        -notify "$NOTIFY" \
        -notifier "notify-send -u critical -t ${NOTIFY}000 'System will be locked' '$NOTIFY seconds left'" \
        -locker "systemctl suspend" \
        -detectsleep
}
export CM_IGNORE_WINDOW=".* - KeePassXC$"
export LIBVA_DRIVER_NAME=vdpau
export VDPAU_DRIVER=nvidia
# xrandr --output DVI-D-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output HDMI-0 --off # main dvi
xrandr --output HDMI-0 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DVI-D-0 --off # main hdmi
# xrandr --output HDMI-0  --rotate normal --pos 0x0 --mode 1920x1080 --primary --output DVI-D-0 --rotate right --pos 1920x15 --mode 1920x1080 # main hdmi + vert right
locker &
# conky &
remaps &
numlockx &
xset dpms 0 0 180

{
    sleep 10
    systemctl start --user graphical-session.target
    clipmenud &
    # systemctl start --user picom.service
    systemctl start --user redshift.service
    systemctl start --user unclutter.service
    sleep 20
    $BROWSER &
    # alacritty --class 'emacs,emacs' -T 'alacritty-emacsclient' -e emacsclient -e '(doom/quickload-session t)' -nw &
    emacsclient -e '(doom/quickload-session t)' -c &
    sleep 30
    aw-qt &
    # sleep 90
    # syncthingtray
} &

[ -n "$xrdbpid" ] && wait "$xrdbpid"
