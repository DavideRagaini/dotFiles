sanitise tridactyllocal tridactylsync

set allowautofocus false
set smoothscroll false
set theme midnight
set modeindicatorshowkeys true
colourscheme dracula

set searchengine https://searx.be/search?q=%s
searchurls = {
    a: "https://wiki.archlinux.org/index.php?title=Special%3ASearch&search=%s",
    d: "https://duckduckgo.com/?t=hd&va=u&q=%s",
    g: "https://www.google.com/search?q=%s",
    G: "https://wiki.gentoo.org/wiki/%s"
    i: "https://searx.be/search?q=%s&language=it-IT",
    y: "https://yewtu.be/search?q=%s",
    w: "https://en.wikipedia.org/w/index.php?title=Special%3ASearch&search=%s"
}

unbind t
bind t fillcmdline taball
unbind O
bind O fillcmdline tabopen

alias mpvsafe js -p tri.excmds.shellescape(JS_ARG).then(url => tri.excmds.exclaim_quiet('mpv --no-terminal ' + url))
bind ;v hint -W mpvsafe

# bind D composite tabclose | tab # -> close current tab and switch to most recent previous tab
bind ;v hint -W exclaim_quiet mpv
bind ,a hint -W exclaim_quiet dmpv2
bind ,A hint -W exclaim_quiet dmpv aplay
bind ,Z zoom 200
bind ,z zoom 100
bind ,s hint -W exclaim_quiet streamlink best --player mpv
bind ,c hint -W exclaim_quiet clipf
bind ,dg hint -W exclaim_quiet gallery-dl
bind ,dt hint -W exclaim_quiet transadd
bind ,mm hint -W exclaim_quiet dmpv music
bind ,ms hint -W exclaim_quiet dmpv save_music
bind ,ve hint -W exclaim_quiet dmpv enqueue
bind ,vp hint -W exclaim_quiet dmpv eplay

bind / fillcmdline find
bind n findnext
bind N findnext -1
bind <Escape> composite mode normal ; hidecmdline ; nohlsearch
