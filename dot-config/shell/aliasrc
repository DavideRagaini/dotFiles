#!/bin/sh

# Override GNU defaults
alias \
    bc="bc -l" \
    cp="cp -iv" \
    df="df -h" \
    du="du -h" \
    free="free -h" \
    gotop="gotop -sa --mbps" \
    ka="killall" \
    mkd="mkdir -pv" \
    mv="mv -iv" \
    rm="rm -vI" \
    rsync="rsync -h --info=progress2"
# unxz="unxz -v"

# Colorize commands
alias \
    ccat="highlight --out-format=ansi" \
    diff="diff --color=auto" \
    egrep='egrep --color=auto' \
    fgrep='fgrep --color=auto' \
    grep="grep --color=auto" \
    l='exa -l' \
    la='exa -la'

# Abbreviations
alias \
    2f="tmux split -h lf; lf" \
    c.="cd .." \
    e="\$EDITOR" \
    f="lfcd" \
    q="exit" \
    s="doas" \
    smi="doas make install" \
    t="task" \
    tw="timew" \
    v="\$EDITOR" \
    x="sxiv -ft *" \
    xclip="xclip -selection clipboard" \
    zt="zathura"
# spawn="setsid st &" \
# trem="transmission-remote" \
# sudo="doas" \

# fuzzy find
alias \
    vfc="find \$HOME/.config/ -maxdepth 1 | fzf | xargs -r -I % \$EDITOR %" \
    vfd="find \$HOME/.local/src/dotfiles/ | fzf | xargs -r -I % \$EDITOR %" \
    vfs="find \$HOME/.local/bin/ | fzf | xargs -r -I % \$EDITOR %" \
    vfz="find \$HOME/.config/zsh/ | fzf | xargs -r -I % \$EDITOR %"

# git
alias \
    g="git" \
    ga="git add" \
    gc="git commit -m" \
    gd="git pull" \
    gs="git status" \
    gu="git push" \
    scommitf="fzf --multi --ansi --preview='head -20 {+}' &&
		git log --oneline |
		fzf --multi --preview --ansi 'git show {+1}'"
# gua="git remote | xargs -L1 git push --all"

gcl() {
    git clone "$(xclip -selection clipboard -o)"
}

# xbps-install & upgrade
alias \
    xi="doas xbps-install -S" \
    xu="doas xbps-install -Su"

sxi() {
    xbps-query -Rs $1 | fzf | cut -d' ' -f2 | xargs -r -I % doas xbps-install -Sy %
}

# xbps-query
alias \
    xq="xbps-query -Rs" \
    xgot="xbps-query -l | fzf"

sxq() {
    xbps-query -Rs $1 | fzf
}

# xbps-remove
alias \
    xr="doas xbps-remove -R" \
    sxr="xbps-query -l | fzf | cut -d ' ' -f 2 | xargs -r -I % doas xbps-remove -Ry %"

# youtube
# alias \
# y="straw-viewer"
# yt="youtube-dl --add-metadata -i" \
# yta="yt -x -f bestaudio/best" \
# dlm="youtube-dl --add-metadata -ic --extract-audio --audio-format mp3 --audio-quality 0" \
# dlv="youtube-dl -ic --add-metadata" \
# yt="youtube-dl --add-metadata -i -o '%(upload_date)s-%(title)s.%(ext)s'" \
# yta="yt -x -f bestaudio/best"

# Miscellaneous
alias \
    cleanupdates="doas vkpurge rm all; xr -Ooy" \
    dwmrefresh="kill -HUP \$(pidof -s dwm)" \
    ffmpeg="ffmpeg -hide_banner" \
    ref="shortcuts >/dev/null; source \${XDG_CONFIG_HOME:-\$HOME/.config}/shell/shortcutrc ; source \${XDG_CONFIG_HOME:-\$HOME/.config}/shell/zshnameddirrc" \
    zsh-update-plugins="find "$ZDOTDIR/plugins" -type d -exec test -e '{}/.git' ';' -print0 | xargs -I {} -0 git -C {} pull -q"
# mpv="mpv --input-ipc-server=/tmp/mpvsoc$(date +%s)" \

[ -f "$XINITRC" ] && alias startx="startx \$XINITRC"

[ -x "$(command -v nvim)" ] && alias vim="nvim" vimdiff="nvim -d"
