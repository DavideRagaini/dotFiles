#!/bin/sh

case $(hostname) in
    VoiD)
        export BROWSER="librewolf"
        export BROWSER2="qutebrowser"
        xrandr --dpi 200 --output HDMI-0 --primary --auto --output DVI-D-0 --off
        doas intel-undervolt apply &
        ;;
    vDR)
        export BROWSER="qutebrowser"
        doas intel-undervolt apply &
        xbacklight -set 20 &
        libinput-gestures-setup start &
        bluetooth off &
        ;;
    v)
        export BROWSER="librewolf"
        libinput-gestures-setup start
        ;;
esac

remaps &
dunst &
setbg &
unclutter &
clipmenud &
numlockx &
timeOnPc start &
blacklist on &
[ ! -s ~/.config/mpd/pid ] && mpd  &
xautolock -time 15 -notify 180 -notifier "notify-send -u critical -t 180000 'System will be locked' '3 minute left'" -locker 'doas zzz' &
notify-send -i "${XDG_PICTURES_DIR:-$HOME/Storage/Pictures}/UserImg.jpg" "Â«WelcomeÂ»" "$(date)"
# xrdb ${XDG_CONFIG_HOME:-$HOME/.config}/x11/xresources &
# emacs --daemon &
doas tlp start
picom -b
echo "\a" >/dev/tty5 # beep
